@using EmpleoDotNet.Helpers
@model EmpleoDotNet.ViewModel.NewJobOpportunityViewModel

<h2>Nueva Vacante</h2>

<!-- Para más información de este layout revisar la documentación de Bootstrap http://getbootstrap.com/css/#forms -->
@using (Html.BeginForm("New", "JobOpportunity", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div id="opportunity-info">
        
        <h4>Información principal del puesto</h4>
        <div class="form-group">
            <label class="col-sm-2 control-label">Título</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Title, new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.Title)
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Localidad</label>
            <div class="col-sm-10">
                @Html.DropDownListFor(d => d.SelectedLocationId, Model.Locations, new {@class = "form-control", id = "location-id"})
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Descripción del Puesto</label>
            <div class="col-sm-10">
                @Html.TextAreaFor(m => m.Description, new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.Description)
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Categoría</label>
            <div class="col-sm-10">
                @Html.EnumDropListFor(e => e.Category, new {@class = "form-control", id = "category"})
                @Html.ValidationMessageFor(m => m.Category)
            </div>
        </div>
    </div>

    <div id="company-info">
        <h4>Información de la Empresa</h4>

        <div class="form-group">
            <label class="col-sm-2 control-label">Nombre</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.CompanyName)
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Web Site</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.CompanyUrl, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Logo</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.CompanyLogoUrl, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">E-Mail</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.CompanyEmail, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.CompanyEmail)
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Crear Vacante</button>
        </div>
    </div>
}

@section styles{
    @Styles.Render("~/bundles/select2Style")

    <style>
        #company-info {
            margin-top: 50px;
        }

        #opportunity-info {
            margin-top: 50px;
        }
    </style>
}

@section scripts{
    @Scripts.Render("~/bundles/select2Script")

    <script>
        $('select').select2();
    </script>
}
